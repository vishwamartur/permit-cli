{
	"name": "@permitio/cli",
	"version": "0.0.0",
	"license": "MIT",
	"bin": {
		"permit": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "prettier --check . && xo && ava",
		"simple-check": "npx tsx ./source/cli.tsx pdp check -u filip@permit.io -a create -r task"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"axios": "^1.7.7",
		"ink": "^5.0.1",
		"ink-select-input": "^6.0.0",
		"ink-spinner": "^5.0.0",
		"keytar": "^7.9.0",
		"open": "^10.1.0",
		"pastel": "^3.0.0",
		"react": "^18.2.0",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/react": "^18.0.32",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"xo": "^0.54.2"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	}
}
